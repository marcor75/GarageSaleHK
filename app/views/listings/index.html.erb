<div class="jumbotron">
  <h1><%= t('jumbotron_title') %></h1>
  <h2><%= t('jumbotron_subtitle') %></h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <div class ="img_container">
            <%= link_to image_tag(listing.image.url), listing %>
          </div>
          <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p> 
          <p><%= t('sold_by', user: listing.user.name) %></p>
          </div>
        </div>
      </div>  
    <% end %>    
  </div>
</div>

 <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>


<% if (user_signed_in?) %>
  <%= link_to t('new_listing'), new_listing_path, class: "btn btn-default" %>
<% end %> 
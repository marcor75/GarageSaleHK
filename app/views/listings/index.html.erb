<div class="jumbotron">
  <h1>Welcome to the ED Marketplace! </h1>
  <h2>Find interesting stuff from around the world </h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <div class ="img_container">
            <%= link_to image_tag(listing.image.url), listing %>
          </div>
          <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <p><%= "By #{listing.user.name}" %> </p>
          </div>
        </div>
      </div>  
    <% end %>    
  </div>
</div>

<% if (user_signed_in?) %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
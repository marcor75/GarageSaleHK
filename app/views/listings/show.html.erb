<div class="row">
  <div class="col-md-6">
      <div class="thumbnail">
        <!-- we get @listing.image.url from Paperclip docs -->
        <%= image_tag @listing.image.url %>
      </div> 
  </div>

  <div class="col-md-6">
   <h3><%= @listing.name %></h3>
   <p><%= @listing.description %></p>
   <p><%= number_to_currency(@listing.price) %></p>
   <br>
   <div>
   <%= mail_to @listing.user.email, t("contact_seller"), class: "btn btn-primary"  %> 
   </div> 
  </div>
</div> 

<% if(current_user == @listing.user) %>
  <%= link_to t('edit'), edit_listing_path(@listing), class: "btn btn-link" %> |
<% end %>
<%= link_to t('back'), listings_path, class: "btn btn-link" %>

<div class="row">
  <div class="col-md-6">
      <div class="thumbnail">
        <!-- we get @listing.image.url from Paperclip docs -->
        <%= image_tag @listing.image.url %>
      </div> 
  </div>

  <div class="col-md-6">
   <h3><%= @listing.name %></h3>
   <p><%= @listing.description %></p>
   <p><%= number_to_currency(@listing.price) %></p>
   <br>
   <div class="center">
   <!--  path from 'rake routes'; @listing is a rails shortcut that refers to current listing-->
   <%= link_to "Buy Now", new_listing_order_path(@listing), class: "btn btn-primary" %> 
   </div> 
  </div>
</div> 

<% if(current_user == @listing.user) %>
  <%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', listings_path, class: "btn btn-link" %>
